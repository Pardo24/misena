generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model QueueItem {
  id        String   @id @default(cuid())
  recipeId  String
  position  Int
  createdAt DateTime @default(now())

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([recipeId])
  @@index([position])
}

model Recipe {
  id          String   @id
  title       Json
  description Json
  mealType    String
  timeMin     Int
  costTier    Int
  difficulty  String
  tags        Json
  active      Boolean  @default(true)

  ingredients Json
  steps       Json

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  queueItems  QueueItem[]  // ðŸ‘ˆ aÃ±ade esta lÃ­nea
}
