generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model Recipe {
  id          String   @id
  title       Json
  description Json
  mealType    String
  timeMin     Int
  costTier    Int
  difficulty  String
  tags        Json
  active      Boolean  @default(true)

  ingredients Json
  steps       Json

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
